---
/**
 * SiteMeta Component
 *
 * @description Component to handle site metadata and essential head elements
 */
interface Props {
  /**
   * The title of the page
   */
  title: string
  /**
   * The description of the page
   */
  description: string
  /**
   * The URL of the page
   */
  url: string
  /**
   * The image path for social sharing
   */
  image: string
  /**
   * The author of the page
   */
  author?: string
}

const { description, url, author = 'Britney Dennison' } = Astro.props

---

<!-- general meta -->
<meta name="title" content="Britney Dennison, Journalist and Educator" />
<meta name="description" content={description} />
<meta name="author" content={author} />

<!-- open graph -->
<meta property="og:title" content="Britney Dennison, Journalist and Educator" />
<meta property="og:description" content={description} />
<meta property="og:type" content="website" />
<meta property="og:url" content={url} />

<!-- twitter card -->

<!-- page title -->
<title>Britney Dennison, Journalist and Educator</title>
